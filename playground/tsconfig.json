{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["modules/**/*", "../**/*"],
  "exclude": ["./node_modules/*", "./node_modules/@types", "**/*.spec.ts", "clients", "e2e"],
  "buildOnSave": true
}
